[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color0}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color3}
secondary = ${xrdb:color1}
alert = ${xrdb:color9}

[bar/bottom]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 25
bottom = true
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

